<h1>Edit Appointment for <%= @physician.name %></h1>

<%= form_for [@physician, @appointment] do |f| %>
    <div class="field">
    <%= f.label :patient %>
    <%= f.select :patient_id, @patients.collect { |u| [u.name, u.id] } %>
    <%= %>
    </div>
  
    <div class="field">
    <%= f.label :date %>
    <%= f.date_field :appointment_date, required: true, placeholder: 'put in a date' %>
    </div>
    <%= f.submit nil, class: 'ui purple button' %>

    <% if flash[:notice] %>
    <div class="notice"><%= flash[:notice] %></div>
  <% end %>
    <% end %>